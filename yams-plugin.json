{
  "name": "yams_ghidra",
  "version": "0.0.1",
  "description": "Ghidra binary analysis plugin for YAMS",
  "transport": "external",
  "interfaces": [
    "content_extractor_v1",
    "kg_entity_provider_v1"
  ],
  "capabilities": {
    "content_extraction": {
      "formats": ["application/x-executable", "application/x-dosexec"],
      "extensions": [".exe", ".dll", ".so", ".dylib", ".bin", ".elf"]
    },
    "kg_entities": {
      "extensions": [".exe", ".dll", ".so", ".dylib", ".bin", ".elf"],
      "rpc_method": "ghidra.getEntities",
      "entity_types": ["binary", "binary.function", "binary.import", "binary.export", "binary.string", "binary.library"]
    }
  },
  "entry": {
    "binary": {
      "windows": "plugin.exe",
      "linux": "plugin",
      "darwin": "plugin"
    },
    "fallback_cmd": ["python", "-u", "${plugin_dir}/plugin.py"],
    "env": {
      "PYTHONUNBUFFERED": "1"
    }
  },
  "requires": {
    "ghidra": ">=11.0",
    "java": ">=17"
  },
  "notes": "Set GHIDRA_INSTALL_DIR environment variable or pass ghidra_install in plugin.init config"
}
